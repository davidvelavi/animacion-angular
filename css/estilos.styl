.Titulo
	box-sizing border-box
	font-size 16px
	transition 2s
	padding 10px
	position absolute
	background-color white
	top 10px
	border-radius 3px
	left 0
	right 0
	margin auto
	width 98%

.Tarjeta
	box-shadow 0px 2px 4px rgba(black,0.3)
	position relative
	border-radius 4px
	overflow hidden
	

.Contenedor
	position relative
	width 80%
	margin 0 auto
	

.vista.ng-enter,[ui-view].ng-leave
	opacity 0
	position absolute
	transition 1s
	right -100%
	width 100%

.vista.ng-enter-active
	opacity 1
	position absolute
	right 0%
	width 100%

figure
	box-sizing border-box
	width 100%
	margin 0 auto
	text-align center
	background-color pink
img
	width 100%
.Texto
	padding 10px
	margin 0

